<table>
	<p>
		<%@items.each do |image|%>
<tr>
	<td>
			<h2 style="text-align:center;"><%= image.title %></h2>
			<div style="text-align:center;">
				<%=link_to item_path(image.id) do%>
				<%= image_tag image.image_url, class: "rounded-circle" %>
				<%end%>
				 <%=link_to "View >>", item_path(image.id), role: "button", class: "btn btn-outline-info "%>
				 <%if current_user && current_user.cart%>
				 <%=link_to "Add To cart", item_carts_path(image.id), role: "button", class: "btn btn-info", method: :post%>
				 <%elsif current_user%>
				 <%=link_to "Add To/Creat cart", item_carts_path(image.id), role: "button", class: "btn btn-info", method: :post%>
				 <%end%>	

			</div>
			<% end %>
	
			<hr>

</td>
	
	</tr>
	</p>
</table>





