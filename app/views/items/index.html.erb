

<div class="container">
	<%@items.each do |image|%>
	<div class="box">
		<div class="imgBox">
				<%=link_to item_path(image.id) do%>
				<%=image_tag image.image_url%>
				<%end%>
				 <%if current_user && current_user.cart%>
				 <%=link_to "Add To cart", item_carts_path(image.id), role: "button", class: "btn btn-info", method: :post%>
				 <%elsif current_user%>
				 <%=link_to "Add To/Creat cart", item_carts_path(image.id), role: "button", class: "btn btn-info", method: :post%>
				 <%end%>	
		</div>
			<div class="details">
				<div class="containt">
					<%=link_to item_path(image.id) do%>
				<h2><%= image.title %><h2>
						<%end%>
				</div>
			</div>
	</div>

			<% end %>
</div>
